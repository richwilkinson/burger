<div class="container-sm">
  <div class="card">
  <div class="card-body">
<h3>Mondo Burgers !</h3>

<h4>Create a Burger</h4>
<form class="create-form">

  <div class="form-group">
    <label for="mondo">Burger Name</label><br>
    <input type="input" name="name" id="mondo"><br>
  </div>

  <button type="submit">Add the burger</button>
</form>
  </div>
</div>
<h4>Devoured Burgers</h4>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>{{burger_name}}
          <button class="devoured" data-devoured= "{{devoured}}" data-id= "{{id}}">
              Devour Now!
          </button>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h4> Those are some Mondo Burgers!</h4>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>{{burger_name}}
          <button class="devoured" data-devoured="{{devoured}}" data-id=""{{id}}>
              You have devoured this!
          </button>
      </li>
    {{/if}}
  {{/each}}
</ul>
</div>

